# API Keys
GROQ_API_KEY=your_groq_api_key_here

# AWS Configuration for Bedrock
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_SESSION_TOKEN=your_aws_secret_token_here
AWS_REGION=us-west-2

# Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-v2  # Default model ID
BEDROCK_MODEL_KWARGS={"temperature": 0.7, "max_tokens_to_sample": 500}

# Model Configuration
# Uncomment to change the default model picker
LLM_PICKER=ollama  # Options: ollama, groq, bedrock